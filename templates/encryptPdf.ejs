<%-include("../templates/partials/head.ejs") %>

  <title>
    <%= title %>
  </title>

  </head>
  <style>
    body {
      background: url('/static/Images/img1.png') ;
      background-size: cover;
    }
  </style>
  <body>

    <!-- Navbar -->
    <%-include("../templates/partials/nav.ejs") %>

    <div id="loader" class="process-alert hidden p-4 mb-4 w-1/2 mx-auto absolute top-24 left-[21rem] text-center text-sm text-blue-800 rounded-lg bg-blue-100 delay-[1000ms]  dark:bg-gray-800 dark:text-blue-400" role="alert">
      <span class="font-medium"></span> Your file is being processed and will be downloaded automatically.
    </div>

      <div class="container h-[80vh] w-screen m-0 flex justify-center items-center flex-col mx-auto">

        <div class="flex flex-col justify-center w-1/2 bg-sky-300 shadow-2xl rounded-lg p-4 py-8 ">
          <h1 class="text-center text-4xl py-4 mb-8">Encrypt Pdf</h1>
          <form action="/encrypt-pdf" method="POST" enctype="multipart/form-data"
            class="flex flex-col items-end w-4/5 mx-auto">
            <div class="mb-6 w-full ">
              <label class="block mb-3 text-md font-medium text-gray-900 dark:text-white" for="file_input">Upload
                Pdf</label>
              <input
                class="block w-full text-md text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 "
                id="file_input" type="file" name="file" accept=".Pdf, .pdf" required />
              <input
                class="block w-full mt-2 p-1 text-md text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 "
                id="password" type="password" name="password" placeholder="Enter password"  required />
            </div>
            <input type="submit"
              class="justify-self-end w-24 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800 cursor-pointer " id="subBtn">
          </form>
        </div>
      </div>

<%-include("../templates/partials/foot.ejs")%>