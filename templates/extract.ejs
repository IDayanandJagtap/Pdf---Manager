<%-include("../templates/partials/head.ejs") %>

  <title>
    <%= title %>
  </title>

  </head>

  <body>

    <!-- Navbar -->
    <%-include("../templates/partials/nav.ejs") %>

      <!-- Page starts here -->

      <div class="container h-[80vh] w-screen m-0 flex justify-center items-center flex-col mx-auto">

        <div class="flex flex-col justify-center w-1/2 bg-sky-300 rounded-lg p-4 py-8 ">
          <h1 class="text-center text-4xl py-4 mb-8">Extract Pdf</h1>
          <form action="/extract" method="POST" enctype="multipart/form-data"
            class="flex flex-col items-end w-4/5 mx-auto">

            <!-- Error box -->
            <div class="mb-6 w-full ">
              <% if (error) { %>
                <div class="mb-4 text-sm p-2 px-4  bg-red-200 border rounded-md border-red-500 text-red-600"
                  id="error_cont">
                  <%= error.msg %>
                </div>
                <% } %>
                  <label class="block mb-3 text-md font-medium text-gray-900 dark:text-white" for="file_input">Upload
                    pdf</label>
                  <input
                    class="block w-full text-md text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 "
                    id="file_input" type="file" name="pdfs" accept=".pdf" required />
                  <input type="text" name="pg_nos"
                    class="block w-full text-md text-gray-900 p-1 my-2 mt-4 border border-gray-300 rounded-md bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 "
                    placeholder="Enter page no.s ">
                  <div
                    class="block w-full text-sm p-2 px-4  bg-yellow-200 border rounded-md border-yellow-500 text-yellow-600">
                    Enter the page numbers to be extracted seperated by commas</div>
            </div>
            <input type="submit"
              class="justify-self-end w-24 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800 cursor-pointer">
          </form>
        </div>
      </div>



<%-include("../templates/partials/foot.ejs")%>